{
  "name": "ai-video-generator",
  "private": true,
  "version": "0.0.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "pnpm --filter web dev",
    "dev:all": "pnpm --parallel --filter \"./apps/*\" --filter \"./packages/*\" dev",
    "build": "pnpm --filter @zappai/types build && pnpm --filter web build",
    "build:types": "pnpm --filter @zappai/types build",
    "lint": "pnpm --recursive lint",
    "sync-types": "cd packages/types && python generate-types.py && cd ../.. && pnpm build:types",
    "clean": "pnpm --recursive exec rm -rf node_modules .next dist"
  },
  "devDependencies": {
    "typescript": "^5.3.3"
  }
}
